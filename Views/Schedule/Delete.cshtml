@model ScheduleApp.Models.Schedule

<h2>Delete Schedule</h2>

<div>
    <h4>Are you sure you want to delete this schedule?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Start Time</dt>
            <dd class="col-sm-10">@Model.StartTime</dd>

            <dt class="col-sm-2">End Time</dt>
            <dd class="col-sm-10">@Model.EndTime</dd>

            <dt class="col-sm-2">Available</dt>
            <dd class="col-sm-10">@Model.IsAvailable</dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ScheduleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

