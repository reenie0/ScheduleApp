@model ScheduleApp.Models.Lecturer

<h2>Delete Lecturer</h2>

<p>Are you sure you want to delete this lecturer?</p>

<div>
    <p><strong>Lecturer ID:</strong> @Model.LecturerId</p>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="LecturerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Lecturer")" class="btn btn-secondary">Cancel</a>
</form>

