@model ScheduleApp.Models.Department

<h2>Delete Department</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this department?</h4>
    <p><strong>Department Name:</strong> @Model.DepartmentName</p>
    <p><strong>Head of Department:</strong> @Model.HeadOfDepartment</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DepartmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Department")" class="btn btn-secondary">Cancel</a>
</form>
