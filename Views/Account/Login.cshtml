@model ScheduleApp.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <div class="login-box">
            <h2>Login</h2>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.TextBoxFor(m => m.Email, new { @placeholder = "Enter your email" })
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter your password" })
                @Html.DropDownListFor(m => m.UserType, new SelectList(new[] { "student", "lecturer" }), "Select User Type")
                <input type="submit" value="Login">
            }
        </div>
    </div>
</body>
</html>
