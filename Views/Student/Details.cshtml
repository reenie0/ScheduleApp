@model ScheduleApp.Models.Student

<h2>Student Details</h2>

<div>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Student Number:</strong> @Model.StudentNumber</p>
    <p><strong>Program:</strong> @Model.Program</p>
</div>

<a href="@Url.Action("Index", "Student")" class="btn btn-secondary">Back to List</a>
<a href="@Url.Action("Edit", "Student", new { id = Model.StudentId })" class="btn btn-primary">Edit</a>
<a href="@Url.Action("Delete", "Student", new { id = Model.StudentId })" class="btn btn-danger">Delete</a>

