@model ScheduleApp.Models.LecturerSchedule

<h2>Schedule for @Model.LecturerName</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Availability</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model.Schedules)
    {
        <tr>
                <td>@schedule.Date.ToShortDateString()</td>
                <td>@schedule.StartTime</td>
                <td>@schedule.EndTime</td>
                <td>
                    @(schedule.IsAvailable ? "Available" : "Booked")
                </td>
                <td>
                    @if (schedule.IsAvailable)
                {
                    <form asp-action="RequestAppointment" asp-route-scheduleId="@schedule.ScheduleId" method="post">
                            <button type="submit" class="btn btn-primary">Request Appointment</button>
                        </form>
                }
                else
                {
                    <span>N/A</span>
                }
                </td>
            </tr>
    }
    </tbody>
</table>

